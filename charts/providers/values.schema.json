{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "aws": {
      "type": "object",
      "properties": {
        "region": {
          "type": "string",
          "description": "AWS region where resources will be provisioned",
          "default": "us-west-2"
        },
        "providerConfigName": {
          "type": "string",
          "description": "Name of the provider configuration",
          "default": "default"
        },
        "authentication": {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "description": "Method to authenticate with AWS (secret, irsa, or ec2)",
              "enum": ["secret", "irsa", "ec2"],
              "default": "secret"
            },
            "secret": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the secret containing AWS credentials",
                  "default": "aws-credentials"
                },
                "namespace": {
                  "type": "string",
                  "description": "Namespace where the secret is located",
                  "default": "crossplane-system"
                },
                "keys": {
                  "type": "object",
                  "properties": {
                    "accessKeyId": {
                      "type": "string",
                      "description": "Key for AWS access key ID",
                      "default": "aws_access_key_id"
                    },
                    "secretAccessKey": {
                      "type": "string",
                      "description": "Key for AWS secret access key",
                      "default": "aws_secret_access_key"
                    }
                  }
                }
              }
            }
          }
        },
        "providers": {
          "type": "object",
          "properties": {
            "iam": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the IAM provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the IAM provider"
                }
              }
            },
            "s3": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the S3 provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the S3 provider"
                }
              }
            },
            "dynamodb": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the DynamoDB provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the DynamoDB provider"
                }
              }
            },
            "lambda": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the Lambda provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the Lambda provider"
                }
              }
            },
            "sqs": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the SQS provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the SQS provider"
                }
              }
            },
            "apigateway": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the API Gateway provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the API Gateway provider"
                }
              }
            },
            "cognito": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the Cognito provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the Cognito provider"
                }
              }
            },
            "bedrock": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the Bedrock provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the Bedrock provider"
                }
              }
            },
            "cloudfront": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the CloudFront provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the CloudFront provider"
                }
              }
            },
            "secretsmanager": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of the Secrets Manager provider",
                  "default": "v0.41.0"
                },
                "controllerConfig": {
                  "type": "object",
                  "description": "Controller configuration for the Secrets Manager provider"
                }
              }
            }
          }
        }
      }
    }
  }
}
