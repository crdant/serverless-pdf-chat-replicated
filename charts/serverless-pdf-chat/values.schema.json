{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["global", "aws"],
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "namePrefix": {
          "type": "string",
          "description": "Prefix for all resource names",
          "default": "pdf-chat"
        },
        "environment": {
          "type": "string",
          "description": "Environment name (dev, staging, prod, etc.)",
          "default": "dev"
        }
      }
    },
    "aws": {
      "type": "object",
      "required": ["providerConfigName", "s3", "dynamodb", "sqs", "cognito", "iam"],
      "properties": {
        "region": {
          "type": "string",
          "description": "AWS region for resources",
          "default": "us-west-2"
        },
        "accountId": {
          "type": "string",
          "description": "AWS account ID",
          "default": "123456789012"
        },
        "providerConfigName": {
          "type": "string",
          "description": "Name of the AWS provider configuration to use",
          "default": "default"
        },
        "s3": {
          "type": "object",
          "properties": {
            "documentBucketName": {
              "type": ["string", "null"],
              "description": "Custom name for the document bucket. If empty, a name will be generated."
            },
            "corsEnabled": {
              "type": "boolean",
              "description": "Enable CORS for the S3 bucket",
              "default": true
            },
            "versioning": {
              "type": "boolean",
              "description": "Enable versioning for the S3 bucket",
              "default": true
            },
            "lifecycleRules": {
              "type": "array",
              "description": "Lifecycle rules for the S3 bucket",
              "items": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "description": "Whether the rule is enabled",
                    "default": true
                  },
                  "expiration": {
                    "type": "integer",
                    "description": "Number of days after which objects expire",
                    "default": 90
                  }
                }
              }
            },
            "publicAccessBlockConfiguration": {
              "type": "object",
              "properties": {
                "blockPublicAcls": {
                  "type": "boolean",
                  "default": true
                },
                "blockPublicPolicy": {
                  "type": "boolean",
                  "default": true
                },
                "ignorePublicAcls": {
                  "type": "boolean",
                  "default": true
                },
                "restrictPublicBuckets": {
                  "type": "boolean",
                  "default": true
                }
              }
            }
          }
        },
        "dynamodb": {
          "type": "object",
          "required": ["documentTable", "memoryTable", "billingMode"],
          "properties": {
            "documentTable": {
              "type": "object",
              "properties": {
                "name": {
                  "type": ["string", "null"],
                  "description": "Custom name for the document table. If empty, a name will be generated."
                }
              }
            },
            "memoryTable": {
              "type": "object",
              "properties": {
                "name": {
                  "type": ["string", "null"],
                  "description": "Custom name for the memory table. If empty, a name will be generated."
                }
              }
            },
            "billingMode": {
              "type": "string",
              "enum": ["PROVISIONED", "PAY_PER_REQUEST"],
              "default": "PAY_PER_REQUEST"
            }
          }
        },
        "sqs": {
          "type": "object",
          "required": ["embeddingQueue"],
          "properties": {
            "embeddingQueue": {
              "type": "object",
              "properties": {
                "name": {
                  "type": ["string", "null"],
                  "description": "Custom name for the embedding queue. If empty, a name will be generated."
                },
                "visibilityTimeout": {
                  "type": "integer",
                  "description": "The visibility timeout for the queue in seconds",
                  "default": 180
                },
                "messageRetentionPeriod": {
                  "type": "integer",
                  "description": "The message retention period in seconds",
                  "default": 3600
                }
              }
            }
          }
        },
        "cognito": {
          "type": "object",
          "required": ["userPool", "userPoolClient"],
          "properties": {
            "userPool": {
              "type": "object",
              "properties": {
                "name": {
                  "type": ["string", "null"],
                  "description": "Custom name for the user pool. If empty, a name will be generated."
                },
                "autoVerifiedAttributes": {
                  "type": "array",
                  "description": "Attributes that should be auto-verified",
                  "default": ["email"],
                  "items": {
                    "type": "string",
                    "enum": ["email", "phone_number"]
                  }
                },
                "usernameAttributes": {
                  "type": "array",
                  "description": "Attributes that can be used as username",
                  "default": ["email"],
                  "items": {
                    "type": "string",
                    "enum": ["email", "phone_number"]
                  }
                },
                "adminCreateUserConfig": {
                  "type": "object",
                  "properties": {
                    "allowAdminCreateUserOnly": {
                      "type": "boolean",
                      "description": "Only allow administrators to create users",
                      "default": true
                    }
                  }
                },
                "passwordPolicy": {
                  "type": "object",
                  "properties": {
                    "minimumLength": {
                      "type": "integer",
                      "description": "Minimum length of password",
                      "default": 8
                    },
                    "requireLowercase": {
                      "type": "boolean",
                      "description": "Require lowercase characters in password",
                      "default": true
                    },
                    "requireNumbers": {
                      "type": "boolean",
                      "description": "Require numbers in password",
                      "default": true
                    },
                    "requireSymbols": {
                      "type": "boolean",
                      "description": "Require symbols in password",
                      "default": true
                    },
                    "requireUppercase": {
                      "type": "boolean",
                      "description": "Require uppercase characters in password",
                      "default": true
                    }
                  }
                }
              }
            },
            "userPoolClient": {
              "type": "object",
              "properties": {
                "name": {
                  "type": ["string", "null"],
                  "description": "Custom name for the user pool client. If empty, a name will be generated."
                },
                "generateSecret": {
                  "type": "boolean",
                  "description": "Generate client secret",
                  "default": false
                }
              }
            }
          }
        },
        "iam": {
          "type": "object",
          "required": ["roles"],
          "properties": {
            "roles": {
              "type": "object",
              "required": ["lambdaRole"],
              "properties": {
                "lambdaRole": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Name of the Lambda execution role. If null, a name will be generated."
                    },
                    "policies": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": ["string", "null"],
                          "description": "Name of the policy. If null, a default name will be used."
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "tags": {
      "type": "object",
      "description": "Tags to apply to all resources",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
