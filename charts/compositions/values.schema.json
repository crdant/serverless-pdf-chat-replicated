{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name of the chart"
    },
    "aws": {
      "type": "object",
      "properties": {
        "region": {
          "type": "string",
          "description": "AWS region where resources will be provisioned",
          "default": "us-west-2"
        },
        "providerConfigName": {
          "type": "string",
          "description": "Name of the provider configuration",
          "default": "default"
        }
      }
    },
    "compositions": {
      "type": "object",
      "properties": {
        "cognitoAuth": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether to enable the CognitoAuth composition",
              "default": true
            }
          }
        },
        "frontendConfig": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether to enable the FrontendConfig composition",
              "default": true
            }
          }
        }
      }
    }
  }
}
